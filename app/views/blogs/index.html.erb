<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to 'Show', blog, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', blog, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path, class:"btn btn-outline-success btn-lg btn-block" %>
