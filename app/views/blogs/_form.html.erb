<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <div class="field form-group">
    <%= f.label :category %><br>
      <%#= select(:blog, :categories, @categories.collect {|cat| [cat.name, cat.id]},  {}, multiple: true ) %>
      <%= collection_check_boxes(:blog, :categories, @categories, :id, :name) do |b|
        b.label { b.check_box + b.text}
        end
       %>
    </div>
    <div class="field form-group">
      <%= f.label :new_category %><br>
      <input type='text' name="blog[new_categories]" class="form-control"  placeholder="Enter new categories here..... Separate with comma">
    </div>
    <div class="field form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class:"form-control", placeholder: "You blog title here.." %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class:"form-control", placeholder: "Add some text here .." %>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-dark" %>
  </div>
<% end %>
</br>
